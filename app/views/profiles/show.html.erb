<div class="row">
  <div class="col-sm-4">
    <% if @user.avatar? %>
      <%= image_tag @user.avatar.url(:large), class: 'img-responsive center-block' %>
    <% else %>
      DEFAULT USER AVATAR
    <% end %>
  </div>

  <div class="col-sm-4">
    <h3><%= @user.full_name %></h3>
    <strong>Contact: <%= @user.phone.phony_formatted(format: :national) %></strong>
    <br>
    <strong>BRE Number: </strong>

    <p>
      <%= simple_format @user.biography %>
    </p>
  </div>

  <div class="col-sm-4">
    <% if current_user == @user %>
      <p>
        <%= link_to edit_profile_path, class: 'btn btn-primary' do %>
          <i class="fa fa-pencil-square-o"></i>
          EDIT PROFILE
        <% end %>
      </p>

      <p>
        <%= link_to '#', class: 'btn btn-primary' do %>
          <i class="fa fa-film"></i>
          GENERATE VIDEO
        <% end %>
      </p>
    <% end %>
  </div>
</div>
